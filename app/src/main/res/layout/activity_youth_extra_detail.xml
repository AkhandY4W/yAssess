<?xml version="1.0" encoding="utf-8"?>
<com.vlonjatg.progressactivity.ProgressRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/progressActivity"
    android:padding="@dimen/sixteen_dp"
    tools:context=".ui.YouthExtraDetailActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/login_details_passkey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clipToPadding="true"
        android:elevation="8dp"
        app:cardCornerRadius="2dp">
        <LinearLayout
            android:id="@+id/layout_passkey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_border_with_white_background"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="visible">


            <TextView
                android:id="@+id/txt_personal_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/txt_black_70"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/sixteen_dp"
                android:drawableStart="@drawable/ic_about"
                android:text="PERSONAL INFORMATION" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twelve_dp"
                android:drawableStart="@drawable/ic_baseline_info_24_blue"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/eight_dp"
                android:textSize="@dimen/text_size_12"
                android:text="To Start the test you need to complete your profile" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/sixteen_dp"
        android:clipToPadding="true"
        android:elevation="8dp"
        app:cardCornerRadius="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_border_with_white_background"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="visible">
            <TextView
                android:id="@+id/txt_aadhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/text_grey"
                android:layout_gravity="center"
                android:drawablePadding="@dimen/eight_dp"
                android:drawableStart="@drawable/ic_aadhar_no"
                android:text="Aadhar Number" />

            <EditText
                android:id="@+id/edt_aadhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:layout_marginTop="@dimen/eight_dp"
                android:padding="@dimen/eight_dp"
                android:background="@drawable/grey_border"/>
            <TextView
                android:id="@+id/txt_user_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/text_grey"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:drawablePadding="@dimen/eight_dp"
                android:drawableStart="@drawable/ic_your_professional_headline"
                android:text="Your professional headline" />

            <EditText
                android:id="@+id/edt_user_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textLongMessage"
                android:layout_marginTop="@dimen/eight_dp"
                android:padding="@dimen/eight_dp"
                android:background="@drawable/grey_border"/>
            <TextView
            android:id="@+id/txt_user_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/text_grey"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:drawablePadding="@dimen/eight_dp"
            android:drawableStart="@drawable/ic_gender"
            android:text="Gender" />

            <LinearLayout
                android:id="@+id/layout_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/eight_dp">

            <CheckBox
                android:id="@+id/checkBox_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:paddingLeft="@dimen/four_dp"
                android:button="@drawable/custom_checkbox"
                android:layout_marginEnd="@dimen/sixteen_dp"/>
            <CheckBox
                android:id="@+id/checkBox_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/four_dp"
                android:button="@drawable/custom_checkbox"
                android:text="Female" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_below="@+id/edt_email"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:background="@color/colorPrimary"
                android:text="Save"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</com.vlonjatg.progressactivity.ProgressRelativeLayout>